<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ pageTitle | default("Focus Reactive") }}</title>
    <meta name="description" content="{{ pageDescription | default('Focus Reactive - Modern Web Solutions') }}">
    <meta name="keywords" content="{{ pageKeywords | default('web development, modern web, focus reactive, portfolio, services') }}">
    <meta name="author" content="Focus Reactive">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="./images/favicon.svg">
    <link rel="icon" type="image/x-icon" href="data:image/x-icon;base64,">
    <link rel="apple-touch-icon" sizes="180x180" href="./images/favicon.svg">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap"></noscript>
    <!-- Critical CSS inline -->
    <style>
/* Critical CSS - Above the fold styles */
body{font-family:Inter,Arial,sans-serif;margin:0;padding:0;background:#000;color:#fff;line-height:1.4}
.header{position:absolute;top:0;left:0;width:100%;z-index:1002;padding:20px 24px}
.header__container{display:flex;align-items:center;justify-content:space-between}
.header__burger{width:48px;height:48px;background:rgba(0,0,0,0.8);border:1px solid rgba(255,255,255,0.2);border-radius:8px;cursor:pointer;position:relative;z-index:1001;opacity:0;visibility:hidden;transition:all 0.3s ease}
body.loaded .header__burger{opacity:1;visibility:visible}
.hero{position:relative;min-height:640px;padding:100px 24px 24px;overflow:hidden;display:flex;align-items:flex-end}
.hero__title{font-size:40px;font-weight:600;line-height:.94;margin:0;position:relative;z-index:1}
.wrapper{width:100%;max-width:100%;margin:0 auto}
.mobile-menu{position:fixed;top:0;right:-100%;width:320px;max-width:80vw;height:100%;background:#000;z-index:1000;transition:right 0.4s ease;opacity:0!important;visibility:hidden!important;display:none!important;transform:translateX(-100vh)!important}
body.loaded .mobile-menu{opacity:1!important;visibility:visible!important;display:block!important;transform:translateX(0)!important}
.overlay{position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.8);z-index:999;opacity:0;visibility:hidden;transition:all 0.3s ease}
@media (min-width:1280px){.header{padding:36px 40px}.hero{min-height:809px;padding:120px 40px 49px}.hero__title{font-size:88px}.wrapper{max-width:1360px}.mobile-menu,.overlay,.header__burger{display:none!important}}
    </style>
    <link rel="preload" href="./css/main.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="./css/main.css"></noscript>
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{{ pageTitle | default('Focus Reactive') }}">
    <meta property="og:description" content="{{ pageDescription | default('Focus Reactive - Modern Web Solutions') }}">
    <meta property="og:image" content="{{ ogImage | default('./images/og-image.jpg') }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ pageUrl | default('https://focusreactive.com') }}">
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ pageTitle | default('Focus Reactive') }}">
    <meta name="twitter:description" content="{{ pageDescription | default('Focus Reactive - Modern Web Solutions') }}">
    <meta name="twitter:image" content="{{ ogImage | default('./images/og-image.jpg') }}">
    <!-- Preload critical images -->
    <link rel="preload" href="./images/Logo.svg" as="image" type="image/svg+xml">
</head>
<body>

    {% include 'header.njk' %}

    <main id="main-content" role="main" tabindex="-1">
        
        {% include 'hero.njk' %}

        {% include 'integrate.njk' %}

        {% include 'work.njk' %}

    </main>

    {% include 'footer.njk' %}

    <!-- Load GSAP after page load for better performance -->
    <script>
    window.addEventListener('load', function() {
        const gsapScript = document.createElement('script');
        gsapScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js';
        gsapScript.onload = function() {
            const scrollTriggerScript = document.createElement('script');
            scrollTriggerScript.src = 'https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js';
            scrollTriggerScript.onload = function() {
                // Initialize animations after GSAP is loaded
                if (typeof initIntegrateAnimation === 'function') {
                    initIntegrateAnimation();
                }
            };
            document.head.appendChild(scrollTriggerScript);
        };
        document.head.appendChild(gsapScript);
    });
    </script>
    <script src="./js/main.js" defer></script>
</body>
</html>

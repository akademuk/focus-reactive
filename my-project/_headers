# Font files
/fonts/*
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000

# WOFF2 files
*.woff2
  Content-Type: font/woff2
  Access-Control-Allow-Origin: *

# WOFF files  
*.woff
  Content-Type: font/woff
  Access-Control-Allow-Origin: *

# TTF files
*.ttf
  Content-Type: font/ttf
  Access-Control-Allow-Origin: *

# EOT files
*.eot
  Content-Type: application/vnd.ms-fontobject
  Access-Control-Allow-Origin: *

# Static assets caching - 1 year
/images/*
  Cache-Control: public, max-age=31536000, immutable

/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts caching
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# HTML caching - shorter period
/*.html
  Cache-Control: public, max-age=3600

# Root files
/
  Cache-Control: public, max-age=3600

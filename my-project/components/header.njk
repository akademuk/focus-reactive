<!-- Header -->
<header class="header" role="banner">
  <div class="header__container wrapper">
    <div class="header__logo">
      <a href="/" class="logo" aria-label="Focus Reactive Home">
        <img src="./images/Logo.svg" alt="Focus Reactive logo" width="110" height="38" loading="lazy" decoding="async" />
      </a>
    </div>
    <nav class="header__nav" aria-label="Primary">
      <ul class="header__menu" role="list">
        <li class="header__menu-item" role="listitem">
          <a href="/" class="header__menu-link" aria-current="page">Home</a>
        </li>
        <li class="header__menu-item" role="listitem">
          <a href="/services" class="header__menu-link">Services</a>
        </li>
        <li class="header__menu-item" role="listitem">
          <a href="/portfolio" class="header__menu-link">Portfolio</a>
        </li>
        <li class="header__menu-item" role="listitem">
          <a href="/about" class="header__menu-link">About</a>
        </li>
        <li class="header__menu-item" role="listitem">
          <a href="/blog" class="header__menu-link">Blog</a>
        </li>
      </ul>
    </nav>
    <div class="header__contact-link">
      <a href="/contact" class="header__button--contact" role="button">Contact Us</a>
    </div>
    <button class="header__burger" 
            aria-label="Toggle navigation menu" 
            aria-controls="mobile-menu" 
            aria-expanded="false"
            type="button">
      <span class="header__burger-lines" aria-hidden="true"></span>
    </button>
  </div>
</header>

<!-- Mobile Navigation Overlay -->
<div class="overlay" tabindex="-1" aria-hidden="true"></div>

<!-- Mobile Navigation Menu -->
<aside class="mobile-menu" 
       id="mobile-menu"
       aria-label="Mobile Navigation" 
       hidden>
    <nav class="mobile-menu__nav" aria-label="Mobile Primary Navigation">
        <ul class="mobile-menu__list" role="list">
            <li class="mobile-menu__item" role="listitem">
                <a href="/" class="mobile-menu-link" tabindex="0">Home</a>
            </li>
            <li class="mobile-menu__item" role="listitem">
                <a href="/services" class="mobile-menu-link" tabindex="0">Services</a>
            </li>
            <li class="mobile-menu__item" role="listitem">
                <a href="/portfolio" class="mobile-menu-link" tabindex="0">Portfolio</a>
            </li>
            <li class="mobile-menu__item" role="listitem">
                <a href="/about" class="mobile-menu-link" tabindex="0">About</a>
            </li>
            <li class="mobile-menu__item" role="listitem">
                <a href="/blog" class="mobile-menu-link" tabindex="0">Blog</a>
            </li>
        </ul>
    </nav>
    <div class="mobile-menu__contact">
        <a href="./contact" class="mobile-menu--contact" role="button" tabindex="0">Contact Us</a>
    </div>
</aside>
